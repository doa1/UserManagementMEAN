<% include partials/header.ejs %>
    <h1 class="text-center text-black-50 text-capitalize">Simple Crud App <small>(ExpressJS & MongoDb)</small></h1>
    <h4 class="text-center text-primary text-capitalize">Create New List</h4>
    <% if (errors){%>
        <ul><strong>Ooops, ERRORS!!!</strong>
            <% errors.forEach(function(error){ %>
                <li class="alert alert-danger">
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <%}%>
            <div class="row">
                <div class="col-md-12">
                    <form action="/users/add" method="POST" class="form-horizontal">
                        <div class="col-md-10 ml-5">
                            <div class="row">

                                <div class="col-md-6 form-group">
                                    <label>First Name </label>
                                    <input type="text" name="fname" required placeholder="Enter fname" class="form-control">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Last Name </label>
                                    <input type="text" name="lname" required placeholder="Enter last_name" class="form-control">
                                    <br>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label>UserName </label>
                                    <input type="text" name="username" required placeholder="Enter username" class="form-control">

                                </div>
                                <div class="col-md-6 form-group">
                                    <label>Email</label>
                                    <input type="text" name="email" required placeholder="Enter email" class="form-control">
                                </div>

                                <input type="submit" value="Add New User" class="btn btn-block btn-primary">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <h4 class="text-center text-capitalize mt-5"> Existing List !! </h4>
            <table class="table table-bordered">
                <thead>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </thead>
                <% if (people) {%>
                    <tbody>
                        <% people.forEach(function(person){ %>
                            <tr>
                                <td>
                                    <%= person.fname %>
                                </td>
                                <td>
                                    <%= person.lname%>
                                </td>
                                <td>
                                    <Address><%= person.username%></Address>
                                </td>
                                <td><address><%= person.email %></Address> </td>
                                <td> <a href='#' class="deleteUser" data-id='<%=person._id %>'> Delete</a>
                                </td>
                            </tr>
                            <%}); %>


                    </tbody>
                    <%}%>
            </table>
            <ul>

            </ul>
            <% include partials/footer.ejs %>